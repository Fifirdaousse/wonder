{% extends 'base.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block body %}
	<div class="block mb-20">
		<h2 class="pb-30">Page de profil</h2>
		{{ form_start (form) }}
		{{ form_errors (form) }}
		<div class="form-row">
			{{ form_label (form.email) }}
			{{ form_widget (form.email) }}
		</div>

		<div class="form-row">
			{{ form_label (form.firstname) }}
			{{ form_widget (form.firstname) }}
		</div>

		<div class="form-row">
			{{ form_label (form.lastname) }}
			{{ form_widget (form.lastname) }}
		</div>

		<div class="form-row">
			{{ form_label (form.picture) }}
			{{ form_widget (form.picture) }}
		</div>

		<div class="form-row">
			{{ form_label (form.newPassword) }}
			{{ form_widget (form.newPassword) }}
		</div>
		<button class="btn btn-primary mr-10">Mettre à jour</button>
		{{ form_end(form )}}
	</div>

	<div class="block mb-20">
		<h3 class="pb-30">Mes questions</h3>
		<ul>
			{% for question in app.user.questions %}
				<li>{{question.title}}</li>
			{% endfor %}
		</ul>
	</div>

	<div class="block">
		<h3 class="pb-30">Mes réponses</h3>
		<ul>
			{% for comment in app.user.comments %}
				<li>{{ comment.content | slice(0, 50)}}
					...</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
